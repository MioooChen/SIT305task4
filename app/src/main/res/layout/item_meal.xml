<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/tools"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/colorPrimary"
        android:text="name"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="100"
        android:text="KIERS Laser Body Sculpture Laser Body Sculpture SlimmingKIERS Laser Body Sculpture Laser Body Sculpture SlimmingKIERS Laser Body Sculpture Laser Body Sculpture SlimmingKIERS Laser Body Sculpture Laser Body Sculpture SlimmingKIERS Laser Body Sculpture Laser Body Sculpture SlimmingKIERS Laser Body Sculpture Laser Body Sculpture Slimming "
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tv_up"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="10dp"
        android:background="@mipmap/a1"
        android:padding="5dp"
        android:textColor="#fff"
        android:ellipsize="end"
        android:maxLines="3"

        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_del"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_up"
        android:background="@mipmap/a2"
        android:padding="5dp"
        android:ellipsize="end"
        android:textColor="#fff"
        android:maxLines="3"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorAccent"
        android:padding="5dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="Task"
        android:textSize="17sp" />
        <View
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_up"
            style="@style/divider_line_d8d8d8"/>
</RelativeLayout>


